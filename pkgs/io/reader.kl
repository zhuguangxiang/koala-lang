
package io

pub trait Reader {
    func read(buf [int8]) Result<int>;
}

const DEFAULT_BUF_SIZE = 4096

pub final class BufReader : Reader {
    rd Reader
    buf [int8]
    r int
    w int


    ///
    /// let f = fs.open("log.txt")
    /// let reader = BufReader(f);
    /// reader.
    ///
    pub func __init__(rd Reader) {
        self.rd = rd
        buf = [int8, DEFAULT_BUF_SIZE]
    }
}
